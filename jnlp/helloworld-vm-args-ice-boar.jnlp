<!-- This example show how to run hello-world-swing application using IceBoar. It define a most useful properties. -->

<jnlp spec="1.0+" codebase="http://roche.github.io/IceBoar/">
    <information>
        <title>Hello World Example Ice Boar</title>
        <vendor>Roche</vendor>
        <description>Hello World Description</description>
        <offline-allowed/>
    </information>
    <security>
        <all-permissions/>
    </security>
    <resources>
        <j2se version="1.5+" href="http://java.sun.com/products/autodl/j2se"/>
        <jar href="http://roche.github.io/IceBoar/apps/ice-boar-0.7-SNAPSHOT-jar-with-dependencies.jar"/>

        <property name="jnlp.IceBoar.main-class" value="com.roche.iceboar.helloworldswing.HelloWorld"/>
        <property name="jnlp.IceBoar.jar.0"
                  value="http://roche.github.io/IceBoar/apps/ice-boar-hello-world-swing-0.7-SNAPSHOT-jar-with-dependencies.jar"/>

        <!-- VM arguments -->
        <property name="jnlp.IceBoar.java-vm-args" value="-Xdebug -XX:+UseParallelGC"/>
    </resources>

    <resources os="Windows" arch="amd64">
        <property name="jnlp.IceBoar.targetJavaURL"
                  value="http://roche.github.io/IceBoar/jre/jre-1.7.0_04-win-x64.zip"/>
    </resources>

    <resources os="Windows" arch="x86">
        <property name="jnlp.IceBoar.targetJavaURL"
                  value="http://roche.github.io/IceBoar/jre/jre-1.7.0_04-win-x32.zip"/>
    </resources>

    <resources os="Windows" arch="x86_64">
        <property name="jnlp.IceBoar.targetJavaURL"
                  value="http://roche.github.io/IceBoar/jre/jre-1.7.0_04-win-x64.zip"/>
    </resources>

    <resources os="Mac OS X" arch="i386">
        <property name="jnlp.IceBoar.targetJavaURL"
                  value="http://roche.github.io/IceBoar/jre/jre-1.7.0_04-macosx-x64.zip"/>
    </resources>

    <resources os="Mac OS X" arch="x86_64">
        <property name="jnlp.IceBoar.targetJavaURL"
                  value="http://roche.github.io/IceBoar/jre/jre-1.7.0_04-macosx-x64.zip"/>
    </resources>

    <application-desc main-class="com.roche.iceboar.IceBoar">
    </application-desc>
</jnlp>
